<% wrap_layout :layout do %>
  <section class="page">
    <div class="container container-xs">
      <article class="post">
        <div class="post-heading">
          <% unless current_page.data.hide_title %>
            <h1 class="post-title"><%= current_page.data.title %></h1>
          <% end %>
        </div>

        <div class="post-body">
          <%= yield %>
        </div>
      </article>
    </div>
  </section>
<% end %>
