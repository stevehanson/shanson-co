<% wrap_layout :layout do %>
  <section class="post">
    <div class="container container-xs">
      <article class="post">
        <h3 class="post-title"><%=current_article.title%></h3>
        <div class="post-metadata">
          <div class="read-time"><%=read_length(current_article.body)%> min read</div>
          <div class="date"><%= current_article.date.strftime("%b %d, %Y") %></div>
        </div>
        <div class="post-body">
          <div class="markdown">
            <%= current_article.body %>
          </div>
        </div>
      </article>
    </div>
  </section>

  <div class="kudo-container" style="display: none" data-post-id="<%=current_article.slug%>">
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" class="kudo-heart" x="0px" y="0px" width="512px" height="512px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512" xml:space="preserve">
      <path class="kudo-heart-path" id="kudo-heart-path" d="M429.9,95.6c-40.4-42.1-106-42.1-146.4,0L256,124.1l-27.5-28.6c-40.5-42.1-106-42.1-146.4,0c-45.5,47.3-45.5,124.1,0,171.4   L256,448l173.9-181C475.4,219.7,475.4,142.9,429.9,95.6z" />
    </svg>
    <div class="kudo-count-message">
      <span class="kudo-count"><%= kudos(current_article) %></span> <span class="kudo-word"><%= "kudo".pluralize(kudos(current_article))%></span>
    </div>
    <div class="kudo-thanks">
      <div class="kudo-thanks-heading">Thanks!</div>
      <!--form class="kudo-thanks-form">
        <p>
            I love to know who&#8217;s liking my posts.<br>
            Would you mind telling me your name?
        </p>
        <input type="text" placeholder="John Doe">
        <div class="kudo-thanks-buttons">
          <input type="submit" class="btn btn-secondary btn-xs" value="Sure, here it is"/>
          <a href="#" class="cancel-kudo-form text-link">I&#8217;d rather not</a>
        </div>
      </form-->
    </div>
  </div>
  <script src="https://www.gstatic.com/firebasejs/3.6.3/firebase.js"></script>
<% end %>