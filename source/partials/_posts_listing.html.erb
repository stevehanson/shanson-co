<div class="container container-xs">
  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% page_articles.each_with_index do |article, i| %>
    <article class="post-excerpt">
      <h3 class="post-excerpt-title">
        <%= link_to article.title, article %>
      </h3>

      <div class="post-excerpt-body">
        <p>
          <% if article.data.excerpt.present? %>
            <%= article.data.excerpt %>
          <% else %>
            <%= article.summary %>
          <% end %>
        </p>
      </div>

      <div class="post-excerpt-metadata">
        <div class="read-time"><%= read_length(article.body) %> min read</div>
        <div class="date"><%= human_date(article.date) %></div>
      </div>
    </article>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>