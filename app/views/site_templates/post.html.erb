<%#= content_for(:meta_og_image, @post.hero_image) %>
<%= content_for :meta_description, strip_tags(markdown(@post.excerpt).html_safe).html_safe %>

<section class="post">
  <div class="container container-xs">
    <article class="post">
      <h3 class="post-title"><%=@post.title%></h3>
      <div class="post-metadata">
        <div class="read-time"><%=read_length(@post.body)%> min read</div>
        <div class="date"><%= @post.published_at.strftime("%b %d, %Y") %></div>
      </div>
      <div class="post-body"><%= markdown(@post.body).html_safe %></div>
    </article>
  </div>
</section>

