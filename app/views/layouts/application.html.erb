    </nav>

    <div class="body-content-wrapper">

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div class="page-body">
        <%= yield %>
      </div>

      <footer class="footer">
        <div class="container">
          <div class="footer-msg">
            Made with <i class="icon-heart"></i> by Shanson.
